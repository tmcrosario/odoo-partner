<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_partner_form"
            model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form" />
        <field name="priority">99</field>
        <field name="arch"
               type="xml">
            <field name="category_id"
                   position="replace" />
            <field name="country_id"
                   position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="vat"
                   position="replace" />
            <field name="website"
                   position="replace" />
            <field name="function"
                   position="replace" />
            <field name="title"
                   position="replace" />
            <page name="sales_purchases"
                  position="replace">
                <field name="user_id" invisible="True"/>
            </page>
            <xpath expr="//page[@name='internal_notes']" position="replace">
                <page name="personal_information_page"
                      string="Personal Information"
                      attrs="{'invisible': [('is_company','=',True)]}">
                    <group name="personal_information_group">
                        <group>
                            <field name="birthdate" />
                        </group>
                        <group>
                            <field name="civil_status" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
